{
  "name": "school-management-backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun --sourcemap --minify",
    "build:production": "NODE_ENV=production bun build index.ts --outdir ./dist --target bun --minify --splitting",
    "start:production": "NODE_ENV=production bun run dist/index.js",
    "preview": "bun run build && bun run start:production",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Add linter when needed'",
    "test": "bun test",
    "healthcheck": "curl -f http://localhost:8000/health || exit 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun run db:push --force && bun run db:seed",
    "logs": "tail -f logs/app.log",
    "docker:build": "docker build -t school-management-backend .",
    "docker:run": "docker run -p 8000:8000 --env-file .env school-management-backend"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/lib-storage": "^3.600.0",
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "zod": "^4.1.0"
  }
}
