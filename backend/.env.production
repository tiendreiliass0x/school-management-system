# Production Environment Configuration
NODE_ENV=production

# Database Configuration (Update with your production values)
DATABASE_URL=postgresql://username:password@localhost:5432/school_management_prod

# Server Configuration
PORT=8000

# JWT Configuration (Generate secure keys for production)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# CORS Configuration (Update with your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# External Services
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=/app/logs/app.log

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Production flags
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false