# =======================
# SCHOOL MANAGEMENT SYSTEM
# ENVIRONMENT CONFIGURATION
# =======================

# Environment
NODE_ENV=development

# =======================
# DATABASE CONFIGURATION
# =======================
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/school_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=school_management
DB_USER=postgres
DB_PASSWORD=postgres123

# =======================
# REDIS CONFIGURATION
# =======================
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PASSWORD=redis123

# =======================
# SERVER CONFIGURATION
# =======================
PORT=8000

# =======================
# JWT CONFIGURATION
# =======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# =======================
# CORS CONFIGURATION
# =======================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# =======================
# RATE LIMITING
# =======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# =======================
# SECURITY CONFIGURATION
# =======================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-min-32-chars

# =======================
# API KEYS
# =======================
# Comma-separated list of valid API keys for external integrations
API_KEYS=

# =======================
# EMAIL CONFIGURATION
# =======================
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourschool.com
FROM_NAME=School Management System

# =======================
# FILE UPLOAD CONFIGURATION
# =======================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt

# =======================
# LOGGING CONFIGURATION
# =======================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =======================
# BACKUP CONFIGURATION
# =======================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =======================
# MONITORING & ANALYTICS
# =======================
# Error tracking
SENTRY_DSN=

# Application monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=school-management-system

# Analytics
GOOGLE_ANALYTICS_ID=

# =======================
# EXTERNAL SERVICES
# =======================
# Optional: AWS S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=

# Optional: Twilio for SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional: SendGrid for email notifications
SENDGRID_API_KEY=

# =======================
# FRONTEND CONFIGURATION
# =======================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=School Management System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Comprehensive school management solution

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false
NEXT_PUBLIC_DEBUG_MODE=true

# =======================
# DEVELOPMENT ONLY
# =======================
# Set to true to enable API documentation
ENABLE_SWAGGER=true

# Set to true to enable GraphQL playground
ENABLE_PLAYGROUND=false

# Set to true to seed database with demo data
ENABLE_DEMO_DATA=true

# =======================
# SSL/TLS CONFIGURATION
# =======================
# Paths to SSL certificates (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# =======================
# TIMEZONE CONFIGURATION
# =======================
TZ=UTC

# =======================
# DOCKER CONFIGURATION
# =======================
# Used by docker-compose for container settings
COMPOSE_PROJECT_NAME=school-management